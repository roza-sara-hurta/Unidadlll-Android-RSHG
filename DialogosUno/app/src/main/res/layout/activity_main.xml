<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#000"
    tools:context="mx.edu.utng.dialogosuno.MainActivity">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="Toast"
        android:id="@+id/btnToast"></Button>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dialogo con Toast"
        android:id="@+id/lblToast"
        android:textColor="#FFF"
        android:layout_toRightOf="@id/btnToast"
        android:layout_alignBaseline="@id/btnToast" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dialogo"
        android:id="@+id/btnDialog"
        android:layout_below="@+id/btnToast"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"></Button>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dialogo con Fragmento"
        android:id="@+id/lblFragmento"
        android:textColor="#FFF"
        android:layout_toRightOf="@id/btnDialog"
        android:layout_alignBaseline="@id/btnDialog" />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha"
        android:id="@+id/btnFecha"
        android:layout_below="@+id/btnDialog"
        android:layout_alignParentLeft="true"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dialogo con Fecha"
        android:id="@+id/lblFecha"
        android:textColor="#FFF"
        android:layout_toRightOf="@id/btnFecha"
        android:layout_alignBaseline="@id/btnFecha" />



</RelativeLayout>
