<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_data"
    android:elevation="@dimen/card_padding"
    android:layout_margin="@dimen/card_margin"
    app:cardCornerRadius="6dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/card_padding">
        <ImageView
            android:layout_width="@dimen/image_size"
            android:layout_height="@dimen/image_size"
            android:id="@+id/iv_person_photo"
            android:src="@drawable/coffe"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/margin_image"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_person_name"
            android:layout_toRightOf="@id/iv_person_photo"
            android:layout_alignParentTop="true"
            android:textSize="@dimen/name_size"
            android:text="@string/italian_coffee"
            android:fontFamily="cursive"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_person_age"
            android:layout_toRightOf="@id/iv_person_photo"
            android:layout_below="@id/tv_person_name"
            android:text="@string/_34_years_old"

            />
    </RelativeLayout>


</android.support.v7.widget.CardView>